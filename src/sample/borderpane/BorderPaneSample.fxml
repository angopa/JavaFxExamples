<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<BorderPane fx:controller="sample.borderpane.BorderPaneController" xmlns:fx="http://javafx.com/fxml">

    <top>
        <Label text="This label is in the top position" BorderPane.alignment="center"
        style="-fx-border-color:blue; -fx-border-width: 3; -fx-border-style: dashed" />
    </top>

    <left>
        <Label text="This label is in the left position"/>
    </left>

    <right>
        <Label text="This label is in the right position"/>
    </right>

    <center>
        <Label text="This label is in the center of the screen and this has a very large text."/>
    </center>

    <bottom>
        <HBox spacing="10" alignment="top_right">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="OK" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>

        </HBox>
    </bottom>

</BorderPane>
